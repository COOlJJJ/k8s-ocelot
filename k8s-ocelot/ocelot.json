{
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Namespace": "xdp-poc",
      "Type": "kube"
    }
  },
  "Routes": [
    // API01: apple-api-svc
    {
      "DownstreamPathTemplate": "/api/{url}",
